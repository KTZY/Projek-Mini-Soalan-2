PE=float(input("Masukkan penggunaan elektrik(kWj): "))
UPE=0
KT=0
Bayaran=0
if PE > 0:
    KT=0.218
    UPE=200
    Bayaran=PE*KT
elif PE > 200:
    KT=0.334
    UPE=100
    Bayaran=PE*KT
elif PE > 300:
    KT=0.516
    UPE=300
    Bayaran=PE*KT
elif PE > 600:
    KT=0.546
    UPE=300
    Bayaran=PE*KT
print("Bayaran bill elektrik ialah RM",Bayaran)
